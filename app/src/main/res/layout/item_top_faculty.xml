<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_container"
        android:layout_width="120dp"
        android:layout_height="0dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/faculty_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Harry Potter"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/expertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BCBDBD"
        android:text="Vedic Astrology"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/course_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFAECC"
        android:text="18 Courses"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/expertise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="See Courses"
        android:textColor="@color/white"
        android:backgroundTint="#8213DA"
        android:minHeight="0dp"
        android:padding="2dp"
        android:textSize="12sp"
        app:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/course_count"
        app:layout_constraintStart_toStartOf="@id/image_container"
        app:layout_constraintEnd_toEndOf="@id/image_container"/>

</androidx.constraintlayout.widget.ConstraintLayout>